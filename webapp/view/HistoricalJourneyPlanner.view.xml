<mvc:View controllerName="journeyPlanner.JourneyPlanner.controller.HistoricalJourneyPlanner" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:semantic="sap.m.semantic"
	xmlns:core="sap.ui.core">
	<semantic:FullscreenPage title="Historical Journey Planner" 
							 navButtonPress="onHistoricalJourneyPlannerNavBack" 
							 showNavButton="true" 
							 busy="{HistoricalJourneyPlanner>/FullScreenPageBusy}">
		<semantic:content>
			<VBox class="sapUiSmallMarginBeginEnd 
						 sapUiSmallMarginTopBottom" 
				  width="100%">
				<HBox>
					<VBox width="20%">
						<ComboBox id="idStationDropDown" 
								  class="smartJourneyPlannerStationDropDowns"
								  items="{path: 'HistoricalJourneyPlanner>/MetroStations', 
										  sorter: { path: 'Station_Name' }}"
								  selectedKey="{HistoricalJourneyPlanner>/NewJourneyClientCopy/SFrom}" 
								  width="100%"
								  placeholder="Station" 
								  required="true" 
								  change="onStationSelectionChange">
							<core:Item key="{HistoricalJourneyPlanner>Station_Name}" 
									   text="{HistoricalJourneyPlanner>Station_Name}" />
						</ComboBox>
					</VBox>
					<VBox width="20%" 
						  class="sapUiTinyMarginBeginEnd">
						<ComboBox id="idToStationDropDown" 
								  class="smartJourneyPlannerStationDropDowns"
								  items="{path: 'RealTimeJourneyPlanner>/MetroStations', 
										  sorter: { path: 'Station_Name' }}"
								  selectedKey="{RealTimeJourneyPlanner>/NewJourneyClientCopy/STo}" 
								  width="100%"
								  placeholder="To" 
								  required="true" 
								  change="onToStationSelectionChange">
							<core:Item key="{RealTimeJourneyPlanner>Station_Name}" text="{RealTimeJourneyPlanner>Station_Name}" />
						</ComboBox>
					</VBox>
					<Button text="Submit" 
							type="Emphasized" 
							class="sapUiTinyMarginEnd"
							press="onPressSubmitButton">
					</Button>
				</HBox>
				<VBox height="6rem" 
					  class="sapUiSmallMarginTopBottom 
							 sapUiMediumMarginEnd 
							 smartJourneyPlannerJourneyStation">
					<Text text="Select a valid Station" 
						  class="sapUiMediumMarginTop 
								 sapUiMediumMarginEnd 
								 smartJourneyPlannerJourneyEmptyVBox">
					</Text>
				</VBox>
			</VBox>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>